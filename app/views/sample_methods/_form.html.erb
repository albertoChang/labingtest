<%= form_for sample_method, method: method, url: path  do |f| %>

  <div class="form-group row">
    <%= f.label :Nombre, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :name, class: "form-control form-control-user", required:"required" , maxlength:"80" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :DescripciÃ³n, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_area :description, class: "form-control form-control-user item-description", rows: "5", required:"required" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Costo_unitario , class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <%= f.text_field :unit_cost, class: "form-control form-control-user", required:"required" ,maxlength:"60", email: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :Acreditado?, class: "col-md-3 col-form-label" %>
    <div class="col-md-9 input-wrapper">
      <div class="form-group row">
        <% SampleMethod.accreditations.keys.each do |accreditation|  %>
            <%= f.label accreditation.capitalize, class: "radio form-check-label #{sample_method.accreditation == accreditation ? "checked" : ""}" do %>
            <%= f.radio_button :accreditation, accreditation, class: "form-check-input" , required: "required" %>
            <span class="icons">
              <span class="first-icon fa fa-circle-o"></span>
              <span class="second-icon fa fa-dot-circle-o"></span>
            </span>
            <%= t("activerecord.attributes.sample_method.accreditation.#{accreditation}") %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "Cancelar", sample_methods_path, class: "btn btn-primary sical-btn-cancel" %>
    <%= f.submit "Guardar", class: "btn btn-primary", data: {disable_with: 'Please Wait...'}  %>
  </div>

<% end %>
