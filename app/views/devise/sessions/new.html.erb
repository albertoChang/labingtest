<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                </div>
                <form class="user">
                  <div class="form-group">
                    <%= f.email_field :email, type:"email", class: "form-control form-control-user", id: "exampleInputEmail", placeholder:"Enter Email Address...", autofocus: true, autocomplete: "email" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "current-password",type: "password", class: "form-control form-control-user", id: "exampleInputPassword", placeholder: "Password" %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small">
                        <%= f.check_box :remember_me, type: "checkbox", class: "custom-control-input", id:"customCheck" %>
                        <%= f.label :remember_me, class: "custom-control-label", for:"customCheck" %>
                      </div>
                    </div>
                  <% end %>
                  <%= f.submit "Log in", class: "actions btn btn-primary btn-user btn-block" %>
                  <hr>
                  <hr>
                  <a href="index.html" class="btn btn-google btn-user btn-block">
                    <i class="fab fa-google fa-fw"></i> Login with Google
                  </a>
                </form>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
