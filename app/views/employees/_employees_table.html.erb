<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tel√©fono</th>
      <th>Correo</th>
      <th>Laboratorio</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% employees.each do |employee| %>
      <tr>
        <td><%= employee.full_name %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.email %></td>
        <% if employee.laboratory.nil? %>
          <td>No hay laboratorio asociado</td>
        <% else %>
          <td><%= employee.laboratory.name %></td>
        <% end %>
        <td><%= employee.role.name %></td>
        <td>
          <%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, employee_path(employee), class: "btn btn-info btn-sm", data: { "toggle" => "tooltip" }, title: "Ver" %>
          <%= link_to '<i class="fa fa-edit" aria-hidden="true"></i>'.html_safe, edit_employee_path(employee), class: "btn btn-success btn-sm", data: { "toggle" => "tooltip" }, title: "Editar" %>
          <%#= link_to toggle_status_laboratory_path(employee), id: "employee-lock-#{employee.id}", class: "btn btn-danger btn-sm", data: { "toggle" => "tooltip" }, title: "#{employee.tooltip_status}", method: :put, remote: true do %>
            <%# if employee.active %>
              <!--i class="fa fa-unlock" aria-hidden="true"></i-->
            <%# else %>
              <!--i class="fa fa-lock" aria-hidden="true"></i-->
            <%# end %>
          <%# end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>