<div class="nested-fields form-group row text-left">
  <div class="col-md-3  text-center">
    <%= f.collection_select(:menu_id, @menus, :id, :navigation_name) %>
  </div>
  <div class="col-md-2 text-center">
    <%= f.check_box :create %>
  </div>
  <div class="col-md-2 text-center">
    <%= f.check_box :view %>
  </div>
  <div class="col-md-2 text-center">
    <%= f.check_box :edit %>
  </div>
  <div class="col-md-2 text-center">
    <%= f.check_box :status %>
  </div>
  <div class="col-md-1">
    <%= link_to_remove_association f do %>
      <i class="fa fa-times" aria-hidden="true"></i>
    <% end %>
  </div>
</div>
